<p id="notice"><%= notice %></p>

<h1>Panels</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Width</th>
      <th>Height</th>
      <th>Page</th>
      <th>Hovertext</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @panels.each do |panel| %>
      <tr>
        <td><%= panel.title %></td>
        <td><%= panel.width %></td>
        <td><%= panel.height %></td>
        <td><%= panel.page %></td>
        <td><%= panel.hovertext %></td>
        <td><%= panel.comment %></td>
        <td><%= link_to 'Show', panel %></td>
        <td><%= link_to 'Edit', edit_panel_path(panel) %></td>
        <td><%= link_to 'Destroy', panel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

